{
	"name": "lpr-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"start": "node build",
		"start:with-docker": "node ./scripts/start-with-docker.js",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"set-guard-passwords": "tsx scripts/set-guard-default-passwords.ts",
		"expire-passes": "tsx scripts/expire-guest-passes.ts",
		"test-email": "tsx scripts/test-email.ts",
		"create-resident": "tsx scripts/create-resident.ts",
		"create-guard": "tsx scripts/create-guard.ts",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"docker:up": "docker compose up --build -d",
		"docker:up:shim": "bash ./scripts/docker-up.sh",
		"docker:down": "docker compose down",
		"docker:logs": "docker compose logs -f",
		"bootstrap-server": "bash ./scripts/bootstrap-server.sh"
	},
